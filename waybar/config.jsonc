	"layer": "top",
	"modules-left": ["custom/launcher", "tray", "backlight", "wireplumber", "mpris", "cava"],
	"modules-center": ["hyprland/workspaces"],
	"modules-right": ["hyprland/language", "network", "cpu", "memory", "battery", "clock"],

